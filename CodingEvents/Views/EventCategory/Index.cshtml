@using CodingEvents.Models

@model List<EventCategory>
<h1>
    Event Categories
</h1>

@if (Model.Count == 0)
{
    <p>No Event Categories yet!</p>
}
else{

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    @foreach (var evt in Model)
    {
        <tr>
            <td>@evt.Id</td>
            <td>@evt.Name</td>
        </tr>
    }
</table>
}
